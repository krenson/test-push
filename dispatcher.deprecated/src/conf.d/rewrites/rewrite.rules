Include conf.d/rewrites/default_rewrite.rules

# leforemhe rules

# Notes
# [PT] Fetch the full path from the renderer with the PT flag (Pass Through)
# [L] It also will stop processing all the other rules L flag (Last) which means it won't have to traverse a huge list of rules.
# [NC] NC flag (No Case-Sensitive)

RewriteRule ^/$ /content/leforemhe/fr/infos-metiers.html [PT,L,NC]

# SEO rules
RewriteRule ^/documents/(.*)$ /content/dam/leforemhe/fr/documents/$1 [PT,L,NC]
RewriteRule ^/images/(.*)$ /content/dam/leforemhe/fr/images/$1 [PT,L,NC]

# robots.txt and sitemap.xml
RewriteRule ^/robots.txt$ /content/dam/leforemhe/fr/seo/robots.txt [NC,PT]
RewriteRule ^/sitemap.xml$ /content/leforemhe/fr.sitemap.xml [NC,PT]

# favicon
RewriteRule ^/favicon.ico$ /etc.clientlibs/leforemhe/clientlibs/clientlib-site/resources/images/favicon.ico [NC,PT]

