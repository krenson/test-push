<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Experience Fragment"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[cq.common.wcm,core.wcm.page.properties,cq.wcm.msm.properties,cq.siteadmin.admin.properties,cq.experience-fragments.properties.tabs, cq.experience-fragments.target.properties]"
          mode="edit">
    <content
            granite:class="cq-dialog-content-page"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    granite:class="cq-siteadmin-admin-properties-tabs"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    size="L">
                <items jcr:primaryType="nt:unstructured">
                    <basic jcr:primaryType="nt:unstructured"/>
                    <advanced jcr:primaryType="nt:unstructured"/>
                    <layout-information jcr:primaryType="nt:unstructured"/>
                    <thumbnail jcr:primaryType="nt:unstructured"/>
                    <cloudservices jcr:primaryType="nt:unstructured"/>
                    <personalization jcr:primaryType="nt:unstructured"/>
                    <permissions jcr:primaryType="nt:unstructured"/>
                    <blueprint jcr:primaryType="nt:unstructured"/>
                    <livecopy jcr:primaryType="nt:unstructured"/>
                    <export jcr:primaryType="nt:unstructured"
                            jcr:title="Export"
                            cq:showOnCreate="{Boolean}true"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title jcr:primaryType="nt:unstructured"
                                           cq:showOnCreate="{Boolean}true"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                           jcr:title="Exporter les paramètres du processus">
                                        <items jcr:primaryType="nt:unstructured">
                                            <folder jcr:primaryType="nt:unstructured"
                                                    required="{Boolean}false"
                                                    cq:showOnCreate="{Boolean}true"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    name="./exportFolder"
                                                    fieldLabel="Nom du répertoire"
                                                    fieldDescription="Dossier pour exporter le fragment d'expérience"/>
                                            <filename jcr:primaryType="nt:unstructured"
                                                      required="{Boolean}false"
                                                      cq:showOnCreate="{Boolean}true"
                                                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                      name="./exportFilename"
                                                      fieldLabel="Nom du fichier"
                                                      fieldDescription="Nom du fichier sur le serveur SFTP"/>
                                            <htmlToPrepenp jcr:primaryType="nt:unstructured"
                                                           required="{Boolean}false"
                                                           cq:showOnCreate="{Boolean}true"
                                                           sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                           name="./exportPrependHTML"
                                                           fieldLabel="HTML à ajouter au début"/>
                                            <htmlToAppend jcr:primaryType="nt:unstructured"
                                                          required="{Boolean}false"
                                                          cq:showOnCreate="{Boolean}true"
                                                          sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                          name="./exportAppendHTML"
                                                          fieldLabel="HTML à ajouter à la fin"/>
                                            <navigationActivePage jcr:primaryType="nt:unstructured"
                                                                  required="{Boolean}false"
                                                                  cq:showOnCreate="{Boolean}true"
                                                                  fieldLabel="Element de la navigation active (Composant Header)"
                                                                  fieldDescription="Element du composant navigation qui doit être considéré comme actif (Ignorez si vous n'êtes dans une variation de Header)"
                                                                  rootPath="/content/leforemhe/fr"
                                                                  name="./navigationActivePage"
                                                                  sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"/>
                                            <hideHamburgerMenuOnDesktop jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                        name="./hideHamburgermenuOnDesktop"
                                                                        text="Cacher le menu Hamburger sur desktop"
                                                                        fieldDescription="Cacher uniquement le menu Hamburger qui s'affiche sur desktop. Cela ne le cache pas sur mobile"
                                                                        uncheckedValue="{Boolean}false"
                                                                        value="{Boolean}true"
                                                                        checked="${not empty cqDesign.hideHamburgermenuOnDesktop ? cqDesign.hideHamburgermenuOnDesktop : false}"/>
                                            <hideHamburgerMenuFully jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    name="./hideHamburgermenuFully"
                                                                    text="Retirer le menu Hamburger"
                                                                    fieldDescription="Cacher le menu Hamburger sur desktop et sur mobile en retirant l'hamburger du HTML"
                                                                    uncheckedValue="{Boolean}false"
                                                                    value="{Boolean}true"
                                                                    checked="{Boolean}true"/>
                                            <enableAPI jcr:primaryType="nt:unstructured"
                                                       sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                       name="./enableAPI"
                                                       text="Activer API"
                                                       uncheckedValue="{Boolean}false"
                                                       value="{Boolean}true"
                                                       checked="{Boolean}true"/>
                                            <enableSFTP jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./enableSFTP"
                                                        text="Activer SFTP"
                                                        uncheckedValue="{Boolean}false"
                                                        value="{Boolean}true"
                                                        checked="{Boolean}true"/>
                                        </items>
                                    </title>
                                </items>
                            </column>
                        </items>
                    </export>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
