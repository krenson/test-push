<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
          jcr:title="Liste CF" sling:resourceType="cq/gui/components/authoring/dialog" height="{Long}400">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <list jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/foundation/form/select"
                          class="cq-dialog-dropdown-showhide"
                          cq-dialog-dropdown-showhide-target=".activity-job-hide-show"
                          fieldLabel="Content fragment model: " name="./contentFragmentModel">
                        <items jcr:primaryType="nt:unstructured">
                            <job jcr:primaryType="nt:unstructured" text="Metier" value="job" />
                            <activity jcr:primaryType="nt:unstructured" text="ActivitÃ©" value="activity" />
                        </items>
                    </list>
                    <activityElement jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/foundation/container"
                              class="hide activity-job-hide-show"
                              showhidetargetvalue="activity">
                        <items jcr:primaryType="nt:unstructured">
                            <list jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/foundation/form/select"
                                  fieldLabel="Content fragment element: " name="./selectedActivityElement">
                                <items jcr:primaryType="nt:unstructured">
                                    <savoir jcr:primaryType="nt:unstructured" text="Savoir" value="savoir" />
                                    <savoirFaire jcr:primaryType="nt:unstructured" text="Savoir Faire" value="-savoirFaire" />
                                </items>
                            </list>
                        </items>
                    </activityElement>
                    <jobElement jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/foundation/container"
                              class="hide activity-job-hide-show"
                              showhidetargetvalue="job">
                        <items jcr:primaryType="nt:unstructured">
                            <list jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/foundation/form/select"
                                  fieldLabel="Content fragment element: " name="./selectedJobElement">
                                <items jcr:primaryType="nt:unstructured">
                                    <assets jcr:primaryType="nt:unstructured" text="Atouts" value="atouts" />
                                    <synonymes jcr:primaryType="nt:unstructured" text="Synonymes" value="synonymes" />
                                    <environments jcr:primaryType="nt:unstructured" text="Environnements" value="environnements" />
                                    <obligatoire jcr:primaryType="nt:unstructured" text="Obligatoire" value="obligatoire" />
                                    <structures jcr:primaryType="nt:unstructured" text="Structures" value="structures" />
                                </items>
                            </list>
                        </items>
                    </jobElement>
                </items>
            </column>
        </items>
    </content>
</jcr:root>