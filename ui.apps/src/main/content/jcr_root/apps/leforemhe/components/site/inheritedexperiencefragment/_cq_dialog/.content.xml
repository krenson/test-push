<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Fragment d'Expérience hérité"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <properties jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <inheritance_notice
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Héritage"
                                                sling:orderBefore="fragmentVariationPath"
                                                sling:resourceType="granite/ui/components/coral/foundation/alert"
                                                text="Si aucune variation n'est configurée, une variation d'une page parente sera tentée d'être récupérée."
                                                variant="info"/>
                                            <fragmentVariationPath
                                                granite:id="xfPicker"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="id"
                                                sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                fieldDescription="Choisir la variation de fragment d'expérience à afficher. Laisser vide pour hériter d'une page parente."
                                                fieldLabel="Variation"
                                                filter="folderOrVariant"
                                                name="./fragmentVariationPath"
                                                propertyFilter="cq:xfShowInEditor"
                                                variant="web"/>
                                            <fragmentPathRelativeToPage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                name="./fragmentPathRelativeToPage"
                                                value="root"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
