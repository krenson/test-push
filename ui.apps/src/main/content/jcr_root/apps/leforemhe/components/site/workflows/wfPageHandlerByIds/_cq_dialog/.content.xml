<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page creation by id"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Properties"
                    sling:resourceType="granite/ui/components/foundation/section">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <list jcr:primaryType="nt:unstructured"
                                  sling:resourceType="granite/ui/components/foundation/form/select"
                                  fieldLabel="Page Template: "
                                  required="true"
                                  name="./metaData/pageTemplate">
                                <items jcr:primaryType="nt:unstructured">
                                    <template_he_complet jcr:primaryType="nt:unstructured" text="HE Metier Complet" value="/conf/leforemhe/settings/wcm/templates/pge_resp_he_metier1" />
                                </items>
                            </list>
                            <contentFolder
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Specify where you want to save the page"
                                    fieldLabel="Destination folder"
                                    name="./metaData/folderDestination"
                                    defaultValue=""
                                    required="true"
                                    rootPath="/content/leforemhe/fr"/>
                            <radioGroup
                                    jcr:primaryType="nt:unstructured"
                                    name="./metaData/action"
                                    text="Action"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup">
                                    <items jcr:primaryType="nt:unstructured">
                                        <radioExpanded
                                            jcr:primaryType="nt:unstructured"
                                            text="Update"
                                            value="update"
                                            checked="true"/>
                                        <radioCollapse
                                            jcr:primaryType="nt:unstructured"
                                            text="Replace"
                                            value="replace"/>
                                    </items>
                             </radioGroup>
                            <hideHamburgerMenuNavigation
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    text="Disable hamburger menu option on page properties"
                                    name="./metaData/hideHamburgerMenuNavigation"
                                    value="true"
                                    uncheckedValue="false"/>
                        </items>
                    </columns>
                </items>
            </tab>
        </items>
    </content>
</jcr:root>