<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:description="Search Results Dialog"
          jcr:primaryType="nt:unstructured"
          jcr:title="Search Results"
          sling:resourceType="cq/gui/components/authoring/dialog">
  <content
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
      <tabs
        granite:class="cq-siteadmin-admin-properties-tabs"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs"
        size="L">
        <items jcr:primaryType="nt:unstructured">
          <general
            jcr:primaryType="nt:unstructured"
            jcr:title="General"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
              <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <searchPath
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                    fieldDescription="Specify search path to be used"
                    fieldLabel="Search Path"
                    name="./searchPaths"
                    rootPath="/content"/>
                  <titre
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Titre"
                    name="./title"/>
                  <soustitre
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Sous titre"
                    name="./subtitle"/>
                  <besoindaide
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Besoin d'aide label"
                    name="./besoinAide"/>
                  <besoindaideUrl
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                    fieldLabel="Besoin d'aide url"
                    name="./besoindaideUrl"
                    rootPath="/content/leforemhe"/>
                  <ShowOffersWhichNotAllIncludeKeywords
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Des offres qui n'incluent pas toutes des mots-clés label"
                    name="./showOffersWhichNotAllIncludeKeywordsLabel"/>
                  <useExcerpt
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    fieldDescription="use granite excerpt in search results"
                    name="./useExcerpt"
                    text="Use Excerpt"
                    uncheckedValue="false"
                    value="true"/>
                  <resultStyle
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Choose the result display style"
                    fieldLabel="Result Display Style"
                    name="./resultStyle">
                    <items jcr:primaryType="nt:unstructured">
                      <plain
                        jcr:primaryType="nt:unstructured"
                        text="Plain"
                        value="plain"/>
                      <thumbnail
                        jcr:primaryType="nt:unstructured"
                        text="Thumbnails"
                        value="thumbnail"/>
                    </items>
                  </resultStyle>
                  <multipleResultLabel
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Plusieurs resultat label"
                    name="./multipleResultLabel"/>
                  <oneResultLabel
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Single resultat label"
                    name="./oneResultLabel"/>
                  <text
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                    name="./noResultText"
                    disableXSSFiltering="{Boolean}true"
                    useFixedInlineToolbar="{Boolean}true">
                    <rtePlugins jcr:primaryType="nt:unstructured">
                      <format
                        jcr:primaryType="nt:unstructured"
                        features="bold,italic"/>
                      <justify
                        jcr:primaryType="nt:unstructured"
                        features="-"/>
                      <lists
                        jcr:primaryType="nt:unstructured"
                        features="*"/>
                      <paraformat
                        jcr:primaryType="nt:unstructured"
                        features="*">
                        <formats jcr:primaryType="nt:unstructured">
                          <default_p
                            jcr:primaryType="nt:unstructured"
                            description="Paragraph"
                            tag="p"/>
                          <default_h1
                            jcr:primaryType="nt:unstructured"
                            description="Heading 1"
                            tag="h1"/>
                          <default_h2
                            jcr:primaryType="nt:unstructured"
                            description="Heading 2"
                            tag="h2"/>
                          <default_h3
                            jcr:primaryType="nt:unstructured"
                            description="Heading 3"
                            tag="h3"/>
                          <default_h4
                            jcr:primaryType="nt:unstructured"
                            description="Heading 4"
                            tag="h4"/>
                          <default_h5
                            jcr:primaryType="nt:unstructured"
                            description="Heading 5"
                            tag="h5"/>
                          <default_h6
                            jcr:primaryType="nt:unstructured"
                            description="Heading 6"
                            tag="h6"/>
                          <default_blockquote
                            jcr:primaryType="nt:unstructured"
                            description="Quote"
                            tag="blockquote"/>
                          <default_pre
                            jcr:primaryType="nt:unstructured"
                            description="Preformatted"
                            tag="pre"/>
                        </formats>
                      </paraformat>
                      <tracklinks
                        jcr:primaryType="nt:unstructured"
                        features="*"/>

                      <!-- Custom plugins -->
                      <leforemhe-extensions-links
                        jcr:primaryType="nt:unstructured"
                        features="modifylink,unlink"/>
                      <!-- Commented out to deactivate plugins -->


                      <externallink
                        jcr:primaryType="nt:unstructured"
                        features="addExternalLink"/>
                      <!--<abbr
                              jcr:primaryType="nt:unstructured"
                              features="addAbbr"/>

                      <address
                              jcr:primaryType="nt:unstructured"
                              features="addAddr"/>

                      <acronym
                              jcr:primaryType="nt:unstructured"
                              features="addAcr"/>-->

                      <!--Additional OOTB plugins configuration-->
                      <links
                        jcr:primaryType="nt:unstructured"
                        features="anchor"/>
                      <subsuperscript jcr:primaryType="nt:unstructured"
                                      features="*"/>
                      <spellcheck jcr:primaryType="nt:unstructured"
                                  features="*"/>
                      <table
                        jcr:primaryType="nt:unstructured"
                        features="*">
                        <hiddenHeaderConfig
                          jcr:primaryType="nt:unstructured"
                          hiddenHeaderClassName="cq-wcm-foundation-aria-visuallyhidden"/>
                      </table>
                      <image jcr:primaryType="nt:unstructured"
                             features="-"/>
                      <keys jcr:primaryType="nt:unstructured"
                            features="-"/>
                      <misctools jcr:primaryType="nt:unstructured"
                                 features="sourceedit"/>
                      <edit jcr:primaryType="nt:unstructured"
                            defaultPasteMode="plaintext"
                            features="[cut,copy,paste-plaintext]"/>
                    </rtePlugins>
                    <uiSettings jcr:primaryType="nt:unstructured">
                      <cui jcr:primaryType="nt:unstructured">
                        <inline
                          jcr:primaryType="nt:unstructured"
                          toolbar="[format#bold,format#italic,format#underline,#justify,#lists,externallink#addExternalLink,leforemhe-extensions-links#modifylink,leforemhe-extensions-links#unlink,links#anchor,#paraformat,abbr#addAbbr,address#addAddr,acronym#addAcr,subsuperscript#subscript,subsuperscript#superscript,spellcheck#checktext,table#table,misctools#sourceedit]">
                          <popovers jcr:primaryType="nt:unstructured">
                            <justify
                              jcr:primaryType="nt:unstructured"
                              items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                              ref="justify"/>
                            <lists
                              jcr:primaryType="nt:unstructured"
                              items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                              ref="lists"/>
                            <paraformat
                              jcr:primaryType="nt:unstructured"
                              items="paraformat:getFormats:paraformat-pulldown"
                              ref="paraformat"/>
                          </popovers>
                        </inline>
                        <dialogFullScreen
                          jcr:primaryType="nt:unstructured"
                          toolbar="[format#bold,format#italic,format#underline,#justify,#lists,externallink#addExternalLink,leforemhe-extensions-links#modifylink,leforemhe-extensions-links#unlink,links#anchor,#paraformat,abbr#addAbbr,address#addAddr,acronym#addAcr,subsuperscript#subscript,subsuperscript#superscript,spellcheck#checktext,table#table,misctools#sourceedit]">
                          <popovers jcr:primaryType="nt:unstructured">
                            <justify
                              jcr:primaryType="nt:unstructured"
                              items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                              ref="justify"/>
                            <lists
                              jcr:primaryType="nt:unstructured"
                              items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                              ref="lists"/>
                            <paraformat
                              jcr:primaryType="nt:unstructured"
                              items="paraformat:getFormats:paraformat-pulldown"
                              ref="paraformat"/>
                          </popovers>
                        </dialogFullScreen>
                        <tableEditOptions
                          jcr:primaryType="nt:unstructured"
                          toolbar="[table#insertcolumn-before,table#insertcolumn-after,table#removecolumn,-,table#insertrow-before,table#insertrow-after,table#removerow,-,table#mergecells-right,table#mergecells-down,table#mergecells,table#splitcell-horizontal,table#splitcell-vertical,-,table#selectrow,table#selectcolumn,-,table#ensureparagraph,-,table#modifytableandcell,table#removetable,-,undo#undo,undo#redo,-,table#exitTableEditing,-]">
                        </tableEditOptions>
                      </cui>
                    </uiSettings>
                  </text>
                </items>
              </column>
            </items>
          </general>
          <results
            jcr:primaryType="nt:unstructured"
            jcr:title="Results"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
              <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <showResults
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    fieldDescription="Afficher les résultats dans le champ de recherche"
                    name="./showResults"
                    text="Montrer les résultats"
                    uncheckedValue="{Boolean}false"
                    value="{Boolean}true"/>
                  <resultPage
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                    fieldDescription="Spécifiez la page où afficher les résultats lorsque vous appuyez sur le bouton de recherche"
                    fieldLabel="Page de résultats"
                    name="./searchResultPage"
                    defaultValue=""
                    rootPath="/content/leforemhe/fr"/>
                  <file
                    granite:class="cmp-image__editor-file-upload"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                    class="cq-droptarget"
                    fileNameParameter="./fallbackImage"
                    fieldLabel="Fall back result image"
                    fileReferenceParameter="./fileReferenceImage"
                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                    name="./file"/>
                </items>
              </column>
            </items>
          </results>
          <facets
            jcr:primaryType="nt:unstructured"
            jcr:title="Tags"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
              <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <showTags
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    fieldDescription="show search facet filters"
                    name="./showTags"
                    text="Show Tags"
                    uncheckedValue="false"
                    value="true"/>
                  <tagNamespaces
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                    composite="{Boolean}true"
                    fieldLabel="Tag namespaces">
                    <field
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/container"
                      name="./tagNamespaces">
                      <items jcr:primaryType="nt:unstructured">
                        <tagfield
                          fieldLabel="Tag namespace"
                          jcr:primaryType="nt:unstructured"
                          name="./tagNamespace"
                          sling:resourceType="cq/gui/components/coral/common/form/tagfield"/>
                      </items>
                    </field>
                  </tagNamespaces>
                </items>
              </column>
            </items>
          </facets>
          <pagination
            jcr:primaryType="nt:unstructured"
            jcr:title="Pagination"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
              <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <showPagination
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    fieldDescription="add pagination to bottom of search results"
                    name="./showPagination"
                    text="Show Pagination"
                    uncheckedValue="false"
                    value="true"/>
                  <resultLimit
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    fieldDescription="defines the number of result hits to display per page"
                    fieldLabel="Result Limit"
                    max="100"
                    min="-1"
                    name="./limit"
                    step="1"
                    value="10"/>
                  <guessTotal
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldDescription="defines the amount querybuilder should guess at the results. leave blank to turn off guess total"
                    fieldLabel="Guess Total"
                    name="./guessTotal"/>
                </items>
              </column>
            </items>
          </pagination>
          <autocomplete
            jcr:primaryType="nt:unstructured"
            jcr:title="Autocomplete"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
              <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <showSuggestions
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    fieldDescription="show search suggestions in autocomplete"
                    name="./showSuggestions"
                    text="Show Suggestions"
                    uncheckedValue="false"
                    value="true"/>
                  <showQuickResults
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    fieldDescription="show quick results in autocomplete"
                    name="./showQuickResults"
                    text="Show Quick Results"
                    uncheckedValue="false"
                    value="true"/>
                </items>
              </column>
            </items>
          </autocomplete>
        </items>
      </tabs>
    </items>
  </content>
</jcr:root>
