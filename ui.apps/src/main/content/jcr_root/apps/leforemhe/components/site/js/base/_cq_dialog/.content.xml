<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Javascript Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:hideChildren="[cloudservices,personalization,blueprint,livecopy,layout-information]">
                    <javascript
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Javascript"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <fields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <filename
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Nom du fichier javascript généré"
                                        fieldLabel="Nom du fichier"
                                        name="./filename"
                                        required="{Boolean}true"/>
                                    <environment
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Nom de l’environnement ou le fichier doit être généré"
                                        fieldLabel="Environnement"
                                        name="./environment"
                                        required="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <all
                                                jcr:primaryType="nt:unstructured"
                                                selected="{Boolean}true"
                                                text="All"
                                                value="all"/>
                                            <production
                                                jcr:primaryType="nt:unstructured"
                                                text="Production"
                                                value="prod"/>
                                            <stage
                                                jcr:primaryType="nt:unstructured"
                                                text="Staging"
                                                value="stage"/>
                                            <dev
                                                jcr:primaryType="nt:unstructured"
                                                text="Dévelopement"
                                                value="dev"/>
                                        </items>
                                    </environment>
                                    <authorinstance
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="./authorinstance"
                                            checked="{Boolean}true"
                                            uncheckedValue="{Boolean}false"
                                            value="{Boolean}true"
                                            text="Désactiver pour l'instance auteur AEM"/>
                                </items>
                            </fields>
                        </items>
                    </javascript>
                    <javascript_limitations
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Javascript: limitations"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <fields
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <pages_list
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Liste des pages dans lequel ce javascript doit être inclus. Laisser vide pour toutes les pages du template."
                                        fieldLabel="Restriction de pages">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./pagesRestrict">
                                            <items jcr:primaryType="nt:unstructured">
                                                <page
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Page"
                                                    name="./path"
                                                    required="{Boolean}true"
                                                    rootPath="/content/leforemhe"/>
                                                <includeChildren
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./children"
                                                    text="Inclure les pages enfants"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                            </items>
                                        </field>
                                    </pages_list>
                                </items>
                            </fields>
                        </items>
                    </javascript_limitations>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
