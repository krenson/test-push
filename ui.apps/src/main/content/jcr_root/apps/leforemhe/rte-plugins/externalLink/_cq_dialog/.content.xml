<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Message"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <link jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/well">
                        <items jcr:primaryType="nt:unstructured">
                            <linkType jcr:primaryType="nt:unstructured"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                      granite:id="rte-linkType-select"
                                      deleteHint="{Boolean}true"
                                      granite:class="cq-dialog-dropdown-showhide"
                                      fieldLabel="Type de lien de référence"
                                      name="./linkType">
                                <items jcr:primaryType="nt:unstructured">
                                    <external
                                            jcr:primaryType="nt:unstructured"
                                            text="Lien externe"
                                            granite:id="rte-linkType-select-external-link"
                                            value="external-link"
                                            icon="globe"/>
                                    <mail
                                            jcr:primaryType="nt:unstructured"
                                            text="Mail To"
                                            granite:id="rte-linkType-select-mail-link"
                                            value="mail-link"
                                            icon="email"/>
                                </items>
                            </linkType>
                            <externalLink jcr:primaryType="nt:unstructured"
                                          sling:resourceType="granite/ui/components/coral/foundation/container"
                                          margin="{Boolean}true"
                                          granite:id="rte-externalLink-container"
                                          granite:class="text-showhide-target">

                                <items jcr:primaryType="nt:unstructured">
                                    <externalLinkType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:id="rte-externalLink-Type"
                                            deleteHint="{Boolean}true"
                                            value="linktype"
                                            fieldLabel="Style du lien"
                                            fieldDescription="Sélectionnez le type de lien pour ce lien externe.">

                                        <items jcr:primaryType="nt:unstructured">
                                            <http
                                                    jcr:primaryType="nt:unstructured"
                                                    text="http"
                                                    value="http://"/>
                                            <https
                                                    jcr:primaryType="nt:unstructured"
                                                    text="https"
                                                    value="https://"/>
                                        </items>
                                    </externalLinkType>
                                    <externalLinkLink
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            granite:id="rte-externalLink-Link"
                                            fieldLabel="Lien"
                                            fieldDescription="Entrer le lien."
                                            name="./externalLinkLink"/>

                                    <externalLinkTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            granite:id="rte-externalLink-Title"
                                            fieldLabel="Title"
                                            fieldDescription="Entrer le title de ce lien externe."
                                            name="./externalLinkTitle"/>
                                    <externalLinkClass
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:id="rte-externalLink-Class"
                                            deleteHint="{Boolean}true"
                                            value="linkclass"
                                            fieldLabel="Style du lien"
                                            fieldDescription="Sélectionnez une class de présentation pour ce lien externe.">

                                        <items jcr:primaryType="nt:unstructured">
                                            <link
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Link"
                                                    value="linkClassExternal"/>
                                            <Styledbutton
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Styled Button"
                                                    value="styledbuttonClassExternal"/>
                                        </items>
                                    </externalLinkClass>
                                    <target jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:id="rte-externalLink-target"
                                            deleteHint="{Boolean}true"
                                            fieldLabel="Cible"
                                            name="./target">
                                        <items jcr:primaryType="nt:unstructured">
                                            <blank
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Nouvel onglet"
                                                    selected="{Boolean}true"
                                                    value="_blank"/>
                                            <self
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Même onglet"
                                                    value="_self"/>
                                            <parent
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Cadre parent"
                                                    value="_parent"/>
                                            <top
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Cadre supérieur"
                                                    value="_top"/>
                                        </items>
                                    </target>
                                </items>
                            </externalLink>
                            <mailLink jcr:primaryType="nt:unstructured"
                                          sling:resourceType="granite/ui/components/coral/foundation/container"
                                          margin="{Boolean}true"
                                      granite:id="rte-externalMail-container"
                                      granite:class="text-showhide-target">
                                <items jcr:primaryType="nt:unstructured">
                                    <mailLinkLink
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            granite:id="rte-mailLink-Link"
                                            fieldLabel="Mail"
                                            fieldDescription="Entrez le mail pour ce lien."
                                            name="./mailto"/>
                                    <mailLinkClass
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:id="rte-mailLink-Class"
                                            deleteHint="{Boolean}true"
                                            value="mailLinkclass"
                                            fieldLabel="Style du lien mail"
                                            fieldDescription="Sélectionnez une class de présentation pour ce mail.">

                                        <items jcr:primaryType="nt:unstructured">
                                            <maillink
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Link"
                                                    value="link"/>
                                            <mailStyledbutton
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Styled Button"
                                                    value="styledbutton"/>
                                        </items>
                                    </mailLinkClass>
                                 </items>
                            </mailLink>

                        </items>
                    </link>
                </items>
            </column>
        </items>
    </content>
</jcr:root>