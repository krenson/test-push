{
  "name": "aem-maven-archetype",
  "version": "0.0.1",
  "description": "Generates an AEM Frontend project with Webpack",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/realdolmen-gfi/aem-leforem-horizons-emploi"
  },
  "private": true,
  "main": "src/main/webpack/site/site.js",
  "license": "SEE LICENSE IN LICENSE.txt",
  "scripts": {
    "storybook": "start npm run startStory && start-storybook -p 4500 -s ./.storybook",
    "dev": "webpack --color --env dev --config ./webpack.dev.js --env resourcePath='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-site/resources' resourceFonts='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-foremWebComponent/resources'",
    "prod": "npm run replace && webpack --color --config ./webpack.prod.js --env resourcePath='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-site/resources' resourceFonts='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-foremWebComponent/resources'",
    "start": "webpack serve --open --config ./webpack.dev.js  --env resourcePath='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-site/resources' resourceFonts='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-foremWebComponent/resources'",
    "startStory": "webpack serve --config ./webpack.dev.js --env resourcePath='/clientlib-site/resources' resourceFonts='/clientlib-foremWebComponent/resources'",
    "watch": "webpack --watch --config ./webpack.prod.js --env resourcePath='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-site/resources' resourceFonts='/etc\\.clientlibs/leforemhe/clientlibs/clientlib-foremWebComponent/resources'",
    "aemsync": "aemsync -w ../ui.apps/src/main/content/jcr_root",
    "aemsync-publish": "aemsync -w ../ui.apps/src/main/content/jcr_root -t http://admin:admin@localhost:4503",
    "linter": "eslint --ext .js src/main/webpack/",
    "linter-fix": "eslint --ext .js src/main/webpack/ --fix",
    "lighthouse": "lighthouse --chrome-flags=\"--no-sandbox --headless\" --output html --output-path ./target/report-performance.html http://localhost:4503",
    "replace": "shx sed -i \"s/\\.\\.\\/fonts\\//\\/etc.clientlibs\\/leforemhe\\/clientlibs\\/clientlib-foremWebComponent\\/resources\\/fonts\\//g\" ./node_modules/@le-forem-dsi/forem-common-style/css/*.css > out 2> err"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@le-forem-dsi/forem-common-style": "4.0.0-beta.1",
    "@storybook/addon-a11y": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-viewport": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/html": "^6.5.0",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "acorn": "^6.1.0",
    "aem-clientlib-generator": "^1.8.0",
    "aem-clientlib-generator-webpack-plugin": "^1.0.0",
    "aemsync": "^3.0.2",
    "antlr4": "4.7.2",
    "autoprefixer": "^9.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "browserslist": "^4.16.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.6.0",
    "cssnano": "^4.1.10",
    "es-module-loader": "^2.3.0",
    "eslint": "^7.12.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-webpack-plugin": "^2.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.2",
    "lighthouse": "^7.4.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass": "^1.17.2",
    "sass-loader": "^7.1.0",
    "shx": "^0.3.4",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.14.1",
    "terser-webpack-plugin": "^1.4.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-import-glob-loader": "^1.6.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {},
  "browserslist": [
    "last 2 version",
    "> 1%"
  ]
}
